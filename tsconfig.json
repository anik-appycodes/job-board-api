{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Allow running .ts files directly with ts-node
    "verbatimModuleSyntax": false,
    "isolatedModules": false
  },
  "include": ["src", "prisma"]
}
