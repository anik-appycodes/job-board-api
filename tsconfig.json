{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Optional - if you want TS to error on unused things
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,

    // Very important: let TS transform `.ts` to `.js` on-the-fly
    "verbatimModuleSyntax": false,
    "isolatedModules": false
  },
  "include": ["src"]
}
